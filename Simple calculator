#include<iostream>
using namespace std;

int main(){
    double n1,n2,res;
    char op;
    cout<<"Enter num1"<<endl;
    cin>>n1;
    cout<<"Enter num2"<<endl;
    cin>>n2;
    cout<<"Enter operator(+,-,/,%,*)"<<endl;
    cin>>op;
    switch(op){
        case '+':
            res=n1+n2;
            break;
        case '-':
            res=n1-n2;
            break;
        case '*':
            res=n1*n2;
            break;
        case '/':
            if(n2==0){
            cout<<"infinite"<<endl;
        }
        else{
        res=n1/n2;
        }
        break;

        default:
        cout<<"invalid operator";
        
    }
    cout<<res;
    return 0;
}
